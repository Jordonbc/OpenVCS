{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@scripts/*": ["scripts/*"],
      "@modals/*": ["modals/*"]
    },
    "types": ["vite/client"],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
